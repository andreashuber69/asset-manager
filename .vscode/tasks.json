// https://github.com/andreashuber69/net-worth#--
{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "serve-development",
      "problemMatcher": [
        "$tsc",
        "$eslint-stylish"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "serve-production",
      "problemMatcher": [
        "$tsc",
        "$eslint-stylish"
      ]
    },
    {
      "type": "npm",
      "script": "build",
      "problemMatcher": [
        "$tsc",
        "$eslint-stylish"
      ]
    },
    {
      "type": "npm",
      "script": "build-code-doc",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": [
        "$eslint-stylish"
      ]
    },
    {
      "type": "npm",
      "script": "show-coverage",
      "problemMatcher": []
    }
  ]
}
